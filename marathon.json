{
  "id": "moxy",
  "cpus": 0.01,
  "mem": 128,
  "instances": 1,
  "constraints": [["hostname", "UNIQUE"]],
  "acceptedResourceRoles": ["slave_public"],
  "cmd": "moxy.marathon.mesos:8888 user:crypted-password",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/edge-proxy",
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 80, "hostPort": 80 }
      ]
    }
  },
  "ports": [ 80 ]
}
